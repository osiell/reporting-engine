<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="act_report_xml_view" model="ir.ui.view">
    <field name="name">ir.actions.report</field>
    <field name="model">ir.actions.report</field>
    <field name="inherit_id" ref="base.act_report_xml_view"/>
    <field name="arch" type="xml">
        <field name="print_report_name" position="attributes">
            <attribute name="attrs">
                {'required':[('report_type', '=', 'pdf-combination')]}
            </attribute>
        </field>
        <notebook position="inside">
            <page string="Lines" name="lines"
                attrs="{'invisible': [('report_type', '!=', 'pdf-combination')]}">
            <group name="main_group">
            <field name="combination_line_ids" nolabel="1">
                <tree editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="type"/>
                    <field name="report_id" attrs="{
                        'readonly': [('type', '!=', 'action_report')],
                        'required': [('type', '=', 'action_report')]}"/>
                    <field name="static_pdf_file_name" readonly="1"
                        invisible="1" force_save="1"/>
                    <field name="static_pdf_file" filename="static_pdf_file_name"
                        widget="binary"
                        attrs="{
                            'readonly': [('type', '!=', 'static_pdf_file')],
                            'required': [('type', '=', 'static_pdf_file')]}"/>
                </tree>
            </field>
            </group>
        </page>
        </notebook>
    </field>
</record>

</odoo>
